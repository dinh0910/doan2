<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>
        <%= title %>
    </title>
    <link href="/css/styles_admin.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.2.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body class="sb-nav-fixed">
    <%- include('layout/header') %>
    <div id="layoutSidenav">
        <%- include('layout/sidebar') %>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-1">Thêm sản phẩm</h1>
                    <form action="/admin/sanpham/them" method="post" class="needs-validation">
                        <div class="mb-3">
                            <label for="TenSanPham" class="form-label">Tên sản phẩm</label>
                            <input type="text" class="form-control" id="TenSanPham" name="TenSanPham" required>
                        </div>
                        <div class="mb-3">
                            <label for="MaDanhMuc" class="form-label">Danh mục</label>
                            <select class="form-select" id="MaDanhMuc" name="MaDanhMuc" required>
                                <option value="">-- Chọn --</option>
                                <% danhmuc.forEach(function(dm) { %>
                                    <option value="<%= dm.MaDanhMuc %>"><%= dm.DanhMuc %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="MaLoaiSanPham" class="form-label">Loại sản phẩm</label>
                            <select class="form-select" id="MaLoaiSanPham" name="MaLoaiSanPham" required>
                                <option value="">-- Chọn --</option>
                                <% loaisanpham.forEach(function(lsp) { %>
                                    <option value="<%= lsp.MaLoaiSanPham %>"><%= lsp.LoaiSanPham %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="MaSize" class="form-label">Size</label>
                            <select class="form-select" id="MaSize" name="MaSize" required>
                                <option value="">-- Chọn --</option>
                                <% size.forEach(function(s) { %>
                                    <option value="<%= s.MaSize %>"><%= s.Size %></option>
                                <% }) %>
                            </select>
                        </div>        
                        <div class="mb-3">
                            <label for="DonGia" class="form-label">Đơn giá</label>
                            <input type="text" class="form-control" id="DonGia" name="DonGia" required>
                        </div>
                        <div class="mb-3">
                            <label for="SoLuong" class="form-label">Số lượng</label>
                            <input type="number" class="form-control" id="SoLuong" name="SoLuong" value="0">
                        </div>
                        <div class="mb-3">
                            <label for="MaTinhTrang" class="form-label">Tình trạng</label> 
                            <select class="form-select" id="MaTinhTrang" name="MaTinhTrang" required>
                                <option value="">-- Chọn --</option>
                                <% tinhtrang.forEach(function(tt) { %>
                                    <option value="<%= tt.MaTinhTrang %>"><%= tt.TinhTrang %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" id="submit" class="btn btn-primary">Thêm</button>
                        </div>
                    </form>
                </div>
            </main>
            <%- include('layout/footer') %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="/js/scripts_admin.js"></script>
</body>
</html>