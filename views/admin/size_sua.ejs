        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-3">Sửa size</h1>
                    <form action="/admin/size/sua/<%= MaSize %>" method="post" class="needs-validation" novalidate>
