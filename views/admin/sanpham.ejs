<body class="sb-nav-fixed">
    <%- include('layout/header') %>
        <div id="layoutSidenav">
            <%- include('layout/sidebar') %>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-1">Thông tin sản phẩm</h1>
                            <a href="/admin/sanpham/them" class="btn btn-light fw-normal">Thêm mới</a>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                            <th>Tên sản phẩm</th>
                                                <th>Danh mục</th>
                                                    <th>Loại sản phẩm</th>
                                                    <th>Size</th>
                                                <th>Đơn giá</th>
                                            <th>Sửa</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var stt = 1 %> 
                                    <% sanpham.forEach(function(sp){ %>
                                        <tr>
                                            <td><%= stt++ %></td>
                                                <td><%= sp.TenSanPham %></td>
                                                    <td><%= sp.DanhMuc %></td>
                                                        <td><%= sp.LoaiSanPham %></td>
                                                            <td><%= sp.Size %></td>
                                                        <td><%= sp.DonGia %></td>
                                                    <!-- <td><%= //sp.SoLuong %></td>
                                                <td>
                                                    <% //if(sp.DaBan == 0) { %>
                                                        <a href="/admin/sanpham/duyet/<%= //sp.MaSanPham %>"><i class="fa-regular fa-circle-check"></i></a>
                                                    <% //} else { %>
                                                        <a href="/admin/sanpham/duyet/<%= //sp.MaSanPham %>"><i class="fa-regular fa-circle"></i></a>
                                                    <% //} %>
                                                </td>
                                            <td><%= //sp.TinhTrang %></td> -->
                                            <td><a href="/admin/sanpham/sua/<%= sp.MaSanPham %>" class="nav-link icon-hover-edit"><i class="fa-solid fa-pen-to-square"></i></a></td>
                                            <td><a href="/admin/sanpham/xoa/<%= sp.MaSanPham %>" class=" nav-link icon-hover-delete"><i class="fa-solid fa-trash"></i></a></td>    
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </main>
                    <%- include('layout/footer') %>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
        <script src="/js/scripts_admin.js"></script>
</body>
</html>